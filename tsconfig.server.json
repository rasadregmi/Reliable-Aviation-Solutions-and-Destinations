{
    "compilerOptions": {
      "target": "ES2017",
      "module": "CommonJS",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "dist",
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["server.ts", "routes/**/*.ts", "models/**/*.ts", "middleware/**/*.ts"],
    "exclude": ["node_modules", ".next", "app"]
  }